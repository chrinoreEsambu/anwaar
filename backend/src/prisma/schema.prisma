generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ClientRole {
  admin
  client
}
model Users {
  id String @id @default(uuid())
  name String
  email String @unique
  birthdate DateTime
  gender String
  role ClientRole @default(client)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Category {
  id String @id @default(uuid())
  name String
  description String @db.VarChar(600)

  Products Products[]
}
model Products {
  id String @id @default(uuid())
  ref String
  name String
  description String @db.VarChar(600)
  price Decimal
  picture_url String
  state ProductState @default(hide)
  createdAt DateTime @default(now())

  categoryId String?
  category Category? @relation(fields: [categoryId], references: [id])
}
 
enum ProductState {
  hide
  display
}